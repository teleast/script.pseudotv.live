			<height>200</height>
			<aspectratio>keep</aspectratio>
			<align>left</align>
			<texture background="true">$INFO[Player.Art(thumb)]</texture>
			<bordertexture border="7">thumbs/bordershadow4.png</bordertexture>
			<bordersize>7</bordersize>
